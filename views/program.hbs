<div class="row">
    <div class="col-md-12">
        <h2>{{program.programName}} - Program Code: {{program.programCode}}</h2>
        <br />
        <form method="post" action="/programs/update">
            <fieldset>
              <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="progCode">Program Code</label>
                            <input class="form-control" id="progCode" name="programCode" type="text" value="{{program.programName}}" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="progName">Program Name</label>
                            <input class="form-control" id="progName" name="programName" type="text" value="{{program.programCode}}"readonly />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Program" /><br /><br /><br />
        </form>
    </div>
</div>